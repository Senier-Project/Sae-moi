<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_budget_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_budget_bar"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_margin="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <!--이 textView 의 width를 바꾸세요오아ㅗ오 -->
            <View
                android:id="@+id/item_budget_view"
                android:layout_width="1dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/item_budget_img"
                android:layout_width="45dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/item_budget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <View
        android:id="@+id/item_budget_under"
        android:layout_width="1dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="5dp"
        android:background="#c271de" />

</LinearLayout>